<div class="m-3">
  <h2>Add a review:</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <div class="form-inputs">
      <%= f.input :content %>
      <%= f.input :rating, as: :integer, input_html: { min: '0', max: '5'} %>
    </div>

    <div class="form-actions btn btn-primary">
      <%= f.button :submit %>
    </div>
  <% end %>

  <%= link_to "Quit", restaurant_path(@restaurant) %>
</div>
